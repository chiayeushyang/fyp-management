<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".student.ViewTopicsSubmitForm">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/student_name_id_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:padding="20dp"
            android:text="Cham Zhao Si 2250160-BSE"
            android:textAlignment="center"
            android:textColor="@color/little_white_black"
            android:textSize="@dimen/app_name_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/document_label_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/other_document_label_tv"
            app:layout_constraintTop_toBottomOf="@id/student_name_id_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/topic_title_tv"
            android:paddingVertical="10dp"
            android:textSize="@dimen/app_name_text_size"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/topic_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arduino of solar ..."
            app:layout_constraintTop_toBottomOf="@id/document_label_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:background="@drawable/bg_rounded"/>

        <TextView
            android:id="@+id/abstracts_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arduino of solar ..."
            app:layout_constraintTop_toBottomOf="@id/topic_title_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:background="@drawable/bg_rounded"
            android:scrollbars="vertical"
            android:lines="15"
            android:minLines="10"/>

        <TextView
            android:id="@+id/supervisor_comment_label_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUPERVISOR COMMENT: "
            app:layout_constraintTop_toBottomOf="@id/abstracts_tv"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/supervisor_comment_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="....."
            app:layout_constraintTop_toBottomOf="@id/supervisor_comment_label_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:background="@drawable/bg_rounded"
            android:scrollbars="vertical"
            android:lines="15"
            android:minLines="10"/>


        <Button
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/supervisor_comment_tv"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginVertical="20sp"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:text="BACK"
            android:backgroundTint="@color/sign_in_btn_bng"
            android:textSize="@dimen/sign_in_btn_text_size"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>